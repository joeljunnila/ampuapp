<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    tools:context=".ImageTextActivity">

    <include layout="@layout/menu_bar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />

    <TextView
        android:id="@+id/textViewSA1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="15dp"
        android:textAlignment="center"
        android:textSize="15.5dp"
        android:text ="Välilihan repeäminen estetään tukemalla sitä toisen kämmenellä,
peukalo ja etusormi kurovat välilihaan joustoa.
Samalla toisella kädellä kontrolloidaan pään syntymistä."/>

    <com.shuhart.stepview.StepView
        android:id="@+id/stepView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"

        app:sv_stepViewStyle="@style/StepView"
        app:sv_animationType="None"
        app:sv_selectedCircleRadius="14dp"
        app:sv_stepNumberTextSize="16sp"
        app:sv_stepLineWidth="4dp"

        app:sv_stepPadding="0dp"

        app:sv_selectedCircleColor="@color/teal_700"
        app:sv_selectedStepNumberColor="@color/primaryColor"

        app:sv_nextStepCircleEnabled="true"
        app:sv_nextStepCircleColor="#BDBDBD"
        app:sv_nextTextColor="#808080"
        app:sv_nextStepLineColor="#BDBDBD"

        app:sv_doneCircleColor="#BDBDBD"
        app:sv_doneStepLineColor="#808080"
        app:sv_doneCircleRadius="14dp"
        app:sv_doneStepMarkColor="@color/primaryColor" />

    <include layout="@layout/arrows"/>
</LinearLayout>